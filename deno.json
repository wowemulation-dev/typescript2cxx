{
  "name": "@wowemulation-dev/typescript2cxx",
  "version": "0.5.0",
  "license": "MIT OR Apache-2.0",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./src/cli.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-env src/cli.ts",
    "start": "deno run --allow-read --allow-write --allow-env src/cli.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --allow-run",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-env --allow-net --allow-run",
    "test:coverage": "deno test --coverage=.output/coverage --allow-read --allow-write --allow-env --allow-net --allow-run",
    "test:cmake": "deno run --allow-all tests/integration/cmake-e2e.ts",
    "coverage": "deno coverage .output/coverage",
    "spec": "deno test tests/specs/*.spec.ts --allow-read --allow-write --allow-env --allow-net --allow-run --no-check",
    "spec:watch": "deno test tests/specs/ --watch --allow-read --allow-write --allow-env --allow-net --allow-run --no-check",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts tests/**/*.ts",
    "compile": "deno compile --allow-read --allow-write --allow-env --output=.output/dist/typescript2cxx src/cli.ts",
    "docs": "deno doc --html --output=.output/docs src/**/*.ts",
    "bench": "deno bench --allow-read --allow-write --allow-env --allow-net"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "exclude": [".output/"]
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": [".output/"]
  },
  "imports": {
    "@std/": "https://deno.land/std@0.220.0/",
    "@std/testing": "https://deno.land/std@0.220.0/testing/bdd.ts",
    "@std/testing/bdd": "https://deno.land/std@0.220.0/testing/bdd.ts",
    "@std/assert": "https://deno.land/std@0.220.0/assert/mod.ts",
    "@std/fs": "https://deno.land/std@0.220.0/fs/mod.ts",
    "@std/path": "https://deno.land/std@0.220.0/path/mod.ts",
    "@std/flags": "https://deno.land/std@0.220.0/flags/mod.ts",
    "typescript": "npm:typescript@5.7.3",
    "@/": "./src/"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "deno.worker", "esnext"]
  },
  "test": {
    "include": ["tests/", "src/**/*.test.ts"],
    "exclude": ["tests/fixtures/", "tests/integration/"]
  },
  "bench": {
    "include": ["benchmarks/"]
  }
}
