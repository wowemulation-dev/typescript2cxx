; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[{Makefile,*.bash,*.sh}]
indent_style = tab

[*.{ps1,bat,cmd,inf}]
indent_style = tab
end_of_line = crlf

[*.{json,yml,yaml}]
indent_size = 2

[*.{ts,tsx}]
indent_size = 2
